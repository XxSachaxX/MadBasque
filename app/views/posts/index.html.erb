<div class="container text center">

  <div class="banner_blog mb-5 text-center">
    <h1>Blog</h1>
  </div>

  <div class="grid-container mb-5">
    <%= link_to concerts_path, class:"text-decoration-none menu-img" do %>
      <div class="grid-item-1 text-white">Concerts</div>
    <% end %>
    <%= link_to tournages_path, class:"text-decoration-none menu-img" do %>
      <div class="grid-item-2 text-white">Tournages</div>
    <% end %>
    <%= link_to artistiques_path, class:"text-decoration-none menu-img" do %>
      <div class="grid-item-3 text-white">Artistiques</div>
    <% end %>
  </div>

  <% @posts.each do |post| %>
    <%= link_to post_path(post), class:"text-decoration-none text-black post-title" do %>
      <div class="text-center mb-5 single-post shadow-lg">
        <h2 class="mb-5"><%= post.title%></h2>
        <% post.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 500, width: 700, crop: :fill %>
        <% end %>
      </div>
    <% end %>
  <% end %>

  <div class="text-center mb-2 pb-2">
    <%= link_to "Back to blog list", blog_path, class:"text-decoration-none" %>
  </div>

</div>
